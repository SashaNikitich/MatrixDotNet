{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/MatrixDotNet/*.csproj",
 	    "src/MatrixDemonstrate/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ],
          "src": "../.."
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "netstandard2.1"
      },
      "disableGitFeatures": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "logo/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "template"
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata" :
    {
      "_appTitle" : "MatrixDotNet",
      "_appFooter" : "Copyright &copy; 2020–2020 KPI Foundation and contributors",
      "_enableSearch": false
    },
  }
}